# Obsidian Vault Configuration
VAULT_PATH=AI_Employee_Vault

# Filesystem Watcher Configuration (Bronze Tier)
# Files dropped in Inbox/ will be detected and processed
WATCH_FOLDER=AI_Employee_Vault/Inbox

# Watcher Mode: 'events' (default) or 'polling' (for WSL/CIFS)
WATCH_MODE=events

# Logging Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# Silver Tier Configuration
# ============================================

# Gmail API Configuration
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_FILE=token.json

# SMTP Fallback Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# WhatsApp Configuration (CDP Architecture)
# Session directory stores full browser profile (IndexedDB, Service Workers, etc.)
# Scan QR code once - both watcher and MCP share the same session via CDP
WHATSAPP_SESSION_DIR=.whatsapp_session
WHATSAPP_CDP_PORT=9222
WHATSAPP_DEDUPE_FILE=.whatsapp_dedupe.json
WHATSAPP_WATCHER_INTERVAL=60

# LinkedIn REST API Configuration (Official API - Recommended)
# Create app at: https://www.linkedin.com/developers/
# Run: python scripts/linkedin_oauth2_setup.py to authenticate
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:8080/linkedin/callback
LINKEDIN_ACCESS_TOKEN=  # Populated by OAuth2 setup script
LINKEDIN_PERSON_URN=  # Populated by OAuth2 setup script
LINKEDIN_API_VERSION=202601
LINKEDIN_DEDUPE_FILE=.linkedin_dedupe.json

# System Configuration
DRY_RUN=false
LOG_LEVEL=INFO

# Orchestrator Configuration
ORCHESTRATOR_CHECK_INTERVAL=5
ORCHESTRATOR_MAX_RETRIES=3
ORCHESTRATOR_RETRY_BACKOFF=25

# Watcher Polling Intervals (seconds)
GMAIL_POLL_INTERVAL=60
WHATSAPP_POLL_INTERVAL=30
LINKEDIN_POLL_INTERVAL=60
