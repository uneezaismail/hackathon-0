{
  "name": "ralph-wiggum",
  "version": "1.0.0",
  "description": "Autonomous task completion loop with file-movement detection for Gold Tier AI Employee",
  "enabled": true,

  "defaults": {
    "max_iterations": 10,
    "timeout_per_iteration": 3600,
    "completion_strategy": "hybrid",
    "pause_between_iterations": 1
  },

  "completion_strategies": {
    "file_movement": {
      "description": "Complete when task file moves from Needs_Action/ to Done/",
      "watch_folder": "AI_Employee_Vault/Needs_Action",
      "done_folder": "AI_Employee_Vault/Done"
    },
    "promise_based": {
      "description": "Complete when output contains completion promise tag",
      "default_promise": "TASK_COMPLETE",
      "promise_format": "<promise>{}</promise>"
    },
    "hybrid": {
      "description": "Complete on either file movement OR promise detection",
      "combines": ["file_movement", "promise_based"]
    }
  },

  "hitl_integration": {
    "pause_on_approval_needed": true,
    "auto_resume_on_approval": true,
    "approval_timeout_hours": 24,
    "create_review_on_max_iterations": true
  },

  "error_handling": {
    "max_consecutive_errors": 3,
    "retry_on_transient_errors": true,
    "graceful_degradation": true
  },

  "logging": {
    "log_file": "AI_Employee_Vault/Logs/ralph-loop.log",
    "log_level": "INFO",
    "log_iterations": true,
    "log_context_preview_length": 500
  },

  "state_management": {
    "state_file": ".claude/ralph-loop.local.md",
    "backup_dir": ".ralph_backups",
    "history_dir": "AI_Employee_Vault/Ralph_History",
    "cleanup_history_after_days": 30
  }
}
